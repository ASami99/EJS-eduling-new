    <body>
        <%- include('partials/navbar') %>
            <!-- Hero Section -->
            <section id="hero">
                <div class="u-container ">
                    <div class="row">
                        <div class="col-md-6 text-left hero-col-left">
                            <h1 class="hero-big-heading">Get Quality career counselling<br>at one place</h1>
                            <h3 class="hero-small-heading">Self-evaluate yourself<br>Now</h3>
                            <p class="hero-text">Eduling helps you in self-evaluating yourself and find new suitable
